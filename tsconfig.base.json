{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "./packages/*/src"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "newLine": "LF",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    {"language": "typescript", "autoFix": true }
  ]
}
